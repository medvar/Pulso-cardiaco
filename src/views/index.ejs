<% titulo="LISTA DE PACIENTES" %>
    <% include partials/header %>

        <div class="container p-4">
            <div class="row">
                <%let cont=1; pacientes.forEach(function (paciente){%>
                    <div class="col-md-4">
                        <div class="card border-info mb-3">
                            <div class="card-header">
                                <%=paciente.Nombre%> /
                                    <%=paciente.Apellido%>
                                        <button type="button" class="btn btn-danger btn-circle"><%=cont++%></button>
                            </div>
                            <div class="card-body">
                                <div class="form-group form-inline">
                                    <label for="edad">Edad : </label><label id="edad" class="ml-2">
                                <%=paciente.Edad%>
                                    </label>
                                </div>
                                <div class="form-group form-inline">
                                    <label for="sexo">Sexo : </label>
                                    <label id="sexo" class="ml-2">
                                    <%=paciente.Sexo%>
                                        </label>
                                </div>
                                <div class="form-group form-inline">
                                    <label for="fuma">Fuma :</label><label id="fuma" class="ml-2">
                                <%=paciente.Fuma%>
                                    </label>
                                </div>
                                <div class="form-group form-inline">
                                    <label for="horas">Horas de Ejercicio :</label><label id="horas" class="ml-2"></label>
                                    <%=paciente.HorasEjercicio%>
                                        </label>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-success" href="/examen/<%=paciente.id%>">Nuevo</a>
                                <a class="btn btn-primary" href="/examenes/<%=paciente.id%>">Examenes</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
        <% include partials/footer %>